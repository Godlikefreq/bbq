<h1>Доступ только по пин-коду</h1>

<%= form_tag("", method: "post") do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="input-group">
    <div class="input-group-text"><i class="bi bi-key-fill"></i></div>
    <%= text_field_tag :pincode, params[:pincode], class: "form-control" %>
  </div>

  <div class="mt-4">
    <%= submit_tag t("button.send"), class: "btn btn-success", data: { turbo: false } %> или <%= link_to t("link.back"), :back %>
  </div>
<% end %>
