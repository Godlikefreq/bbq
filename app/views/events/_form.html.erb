<%= form_with(model: event) do |form| %>

  <%= render partial: "partials/form_errors", locals: {model: @event} %>

  <div class="form-group">
    <%= form.label :title, "Название" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group mt-2">
    <%= form.label :address, "Адрес" %>
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group mt-2">
    <%= form.label :datetime, "Дата и время" %>
    <%= form.datetime_select :datetime, class: "datepicker" %>
  </div>

  <div class="form-group mt-2">
    <%= form.label :description, "Описание" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="actions margin-top mt-4">
    <%= form.submit "Сохранить", class: "btn btn-success" %> или <%= link_to "вернуться", :back %>
  </div>
<% end %>
