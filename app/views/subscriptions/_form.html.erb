<div class="row justify-content-center">
  <%= form_for [@event, subscription] do |form| %>
    <%= render partial: "partials/form_errors", locals: { model: subscription } %>

    <% unless user_signed_in? %>
      <div class="col-sm-6 mt-3">
        <%= form.label :user_name, class: "col-sm-6 col-form-label" %>
        <div class="input-group">
          <div class="input-group-text"><i class="bi bi-person-fill"></i></div>
          <%= form.text_field :user_name, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-6 mt-1">
        <%= form.label :user_email, class: "col-sm-6 col-form-label" %>
        <div class="input-group">
          <div class="input-group-text"><i class="bi bi-mailbox"></i></div>
          <%= form.text_field :user_email, class: "form-control" %>
        </div>
      </div>
    <% end %>

    <div class="mt-4">
      <%= form.submit t("button.subscribe"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
