<a href="<%= photo.photo.url %>" data-gallery="example-gallery" data-toggle="lightbox" class="col-sm-2 mb-2 photo-icon"
   data-caption='
   <%= t("text.photo.added_by") %> <%= render partial: "users/user", object: photo.user %>
     <% if current_user_can_edit?(photo) %>
       <%= link_to '<i class="bi bi-trash3"></i>'.html_safe, event_photo_path(photo.event, photo),
                data: { turbo_method: :delete, turbo_confirm: t("turbo.confirm") } %>
     <% end %>
'>
  <img src="<%= photo.photo.thumb.url %>" class="img-fluid">
</a>