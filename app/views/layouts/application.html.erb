<!DOCTYPE html>
<html>
  <head>
    <title>Barbeque</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="<%= root_path %>"><%= t("app.name") %></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Профиль", current_user, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Выйти", destroy_user_session_path,
                            data: { turbo_method: :delete, turbo_confirm: "Вы уверены?" }, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Войти", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Зарегистрироваться", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-2">
      <div class="row justify-content-center">
        <div class="col-6">
          <% flash.each do |key, value| %>
            <div class="<%= flash_class(key) %> alert-dismissible">
              <%= value %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% end %>
        </div>

        <%= yield %>
      </div>

      <footer class="mt-5">
        <p>&copy; <%= t("app.company") %></p>
      </footer>
    </div>
  </body>
</html>
